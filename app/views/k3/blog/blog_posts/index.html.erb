<h1>Listing blog_posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blog_posts.each do |blog_post| %>
  <tr>
    <td><%= strip_tags blog_post.title %></td>
    <td><%= link_to blog_post.url, blog_post.url %></td>
    <td><%= truncate(blog_post.body, :length => 30) %></td>
    <!--<td><%= link_to 'Show', k3_blog_post_path(blog_post) %></td>-->
    <td><%= link_to 'Edit', pretty_edit_k3_blog_post_path(blog_post) %></td>
    <td><%= link_to 'Destroy', k3_blog_post_path(blog_post), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

