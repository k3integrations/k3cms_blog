.k3_blog_blog_posts_index
  %h1 News

  - if edit_mode? and k3_user.k3_permitted?(:create_blog_post)
    %p
      = form_for blog_post=K3::Blog::BlogPost.new do |f|
        = f.submit 'Create new post'

  - @blog_posts.each do |blog_post|
    %div{:class => dom_class(blog_post), :id => dom_id(blog_post)}
      .title
        - if edit_mode?
          = inline_editable('span', blog_post, :title) do
            = raw blog_post.title
        - else
          = link_to raw(blog_post.title), k3_blog_blog_post_path(blog_post)

      = render_cell('k3/blog/blog_posts', :published_status, :blog_post => blog_post)

      /
        url: #{blog_post.url}

      .date
        - if edit_mode?
          = inline_editable('span', blog_post, :date) do
            = raw blog_post.date
        - else
          = raw blog_post.date

      .summary
        - if edit_mode?
          = inline_editable('div', blog_post, :summary) do
            = raw blog_post.summary
        - else
          = raw blog_post.summary

      - if edit_mode?
        - if can?(:edit, K3::Blog::BlogPost)
          = link_to   'Continue &raquo;'.html_safe, polymorphic_url(blog_post, :focus => "##{dom_id(blog_post)} .editable[data-attribute=body]", :only_path => true)
        - if can?(:destroy, K3::Blog::BlogPost)
          = button_to 'Delete',                     polymorphic_url(blog_post, :only_path => true), :confirm => 'Are you sure?', :method => :delete

      - else
        = link_to   'View more', url_for(blog_post)
